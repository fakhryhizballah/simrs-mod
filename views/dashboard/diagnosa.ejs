<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-6 border-b pb-2">Input Diagnosa & Prosedur</h2>
        
        <form id="form_diagnosa" class="space-y-8">
            
            <!-- SEKSI DIAGNOSA -->
            <div class="space-y-4">
                <div class="space-y-2">
                    <label for="idrg_diagnosa_set" class="block text-sm font-semibold text-gray-700">
                        Cari IDRG Diagnosa Set
                    </label>
                    <select id="idrg_diagnosa_set" name="idrg_diagnosa_set[]" class="w-full" multiple="multiple">
                    </select>
                </div>

                <!-- Hasil List Diagnosa -->
                <div id="diagnosa-list-container" class="hidden">
                    <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Diagnosa Terpilih:</h3>
                    <div id="diagnosa-tags" class="flex flex-col gap-1">
                        <!-- Rendered by JS -->
                    </div>
                </div>
            </div>

            <hr class="border-gray-100">

            <!-- SEKSI PROSEDUR -->
            <div class="space-y-4">
                <div class="space-y-2">
                    <label for="idrg_procedure_set" class="block text-sm font-semibold text-gray-700">
                        Cari IDRG Procedure Set
                    </label>
                    <select id="idrg_procedure_set" name="idrg_procedure_set[]" class="w-full" multiple="multiple">
                        <option value="99.04">99.04 - Packed cell transfusion</option>
                        <option value="89.52">89.52 - Electrocardiogram</option>
                        <option value="90.59">90.59 - Microscopic examination of blood</option>
                        <option value="93.94">93.94 - Nebulizer</option>
                    </select>
                </div>

                <!-- Tabel Prosedur + Jumlah -->
                <div id="procedure-table-container" class="hidden">
                    <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Detail Prosedur & Jumlah:</h3>
                    <div class="overflow-x-auto border rounded-lg">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500">Kode/Nama Prosedur</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 w-32">Jumlah</th>
                                </tr>
                            </thead>
                            <tbody id="procedure-list-body" class="bg-white divide-y divide-gray-200 text-sm">
                                <!-- Rendered by JS -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="pt-6 border-t flex justify-end">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2.5 px-8 rounded-lg shadow-lg transition duration-200">
                    Simpan Data Medis
                </button>
            </div>
        </form>
    </div>
</div>
